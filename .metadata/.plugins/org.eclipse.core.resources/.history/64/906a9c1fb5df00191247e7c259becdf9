package o1

import constants._

class Game {

    val bug = new Bug(new Pos(100, 40))
    val obstacle = new Obstacle(70, new Pos(1000, 100))
    
    def timePasses() = {
      this.bug.fall()
      this.obstacle.approach()
    }
    
    def activateBug() = this.bug.flap() 


}


